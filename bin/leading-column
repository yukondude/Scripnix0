#!/bin/bash
# $Id$
#
# Extract a unique list of the first column of the given input. Optionally, use
# the specified delimiter instead of space.
#
# This file is a part of Scripnix <http://scripnix.googlecode.com/>.
# Written in 2008 by Dave Rogers <yukondude-strudel-gmail-fullstop-com>.
# This script is released into the Public Domain.

source /usr/local/bin/bin.bash

check_arg_count ${0} ${#} 0 1 '[<delimiter>]'

if [ ${#} -eq 1 ] ; then
    delimiter="${1}"
else
    delimiter=' '
fi

cat - | cut --fields 1 --delimiter "${delimiter}" | sort --unique
