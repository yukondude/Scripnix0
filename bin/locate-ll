#!/bin/bash
# $Id$
#
# Locate matching files and display in coloured long-list format.
#
# This file is a part of Scripnix <http://code.google.com/p/scripnix/>.
# Written in 2008 by Dave Rogers <thedude-strudel-yukondude-fullstop-com>.
# This script is released into the Public Domain.

source /usr/local/bin/bin.bash

check_arg_count ${0} ${#} 1 1 '<regexp>'

# Ignore source control droppings.
locate --regex ${1} | degrep-source-control | xargs -I{} ls -l --directory --color=tty {}
